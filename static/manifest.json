{
  "manifest_version": 3,
  "name": "Corrector (GPT)",
  "version": "0.1.0",
  "description": "Контекстное исправление/перевод выделенного текста с помощью ChatGPT.",
  "permissions": ["contextMenus", "scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "match_about_blank": true,
      "all_frames": true
    }
  ],
  "commands": {
    "polish": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Polish selected text"
    },
    "to_en": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      },
      "description": "Translate selected text to English"
    }
  },
  "action": { "default_title": "Corrector" },
  "web_accessible_resources": [
    {
      "resources": ["src/popup.css", "src/notification.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
